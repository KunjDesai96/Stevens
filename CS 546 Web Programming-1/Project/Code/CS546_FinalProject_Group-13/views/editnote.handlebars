<div class="bs-example">
<form class="needs-validation" action="{{note._id}}" method="post">
  <div class="form-group row">
    <label class="col-lg-2 col-form-label" for="note_title">Note Title</label>
    <div class="col-lg-4">
    <input type="text" class="form-control" id="note_title" name="note_title" value="{{note.title}}" placeholder="note title" required>
  </div>
   </div>
  <div class="form-group row">
    <label class="col-lg-2 col-form-label" for="note_content">Note Content:</label>
    <div class="col-lg-4">
    <input type="text" class="form-control" id="note_content" name="note_content" value="{{note.content}}" placeholder="note content" required>
    </div>
  </div>
     <div class="form-group row">
            <label class="col-lg-2 col-form-label" for="radius">Radius:</label>
            <div class="col-lg-2">
                <input type="number" min="0" class="form-control" name="radius" value="{{note.radius}}" id="radius" placeholder="radius"
                    required>
            </div>
    </div>
                                
  <div class="form-group row">
            <label class="col-lg-2 col-form-label" for="tagsdisp">Tags:</label>

            <select class="selectpicker" id="tagsdisp" name="tags" data-live-search="true" data-size="5" multiple>
                {{#each tags}}
                {{#if this.sel}}

                 <option value={{this.tag}} selected>{{this.tag}}</option>
                 
               {{else}}
               <option value={{this.tag}}>{{this.tag}}</option>
               {{/if}}
                {{/each}}
            </select>

        </div>

        <div class="form-group row">
            <div class="col-lg-4 offset-sm-5">
                
                <input id="notepost" type="submit" class="btn btn-primary" value="Submit">

                <input type="reset" class="btn btn-secondary" value="Reset">
            </div>
        </div>
 

</form>
